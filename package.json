{
  "name": "repository-context-packager",
  "version": "0.9.0",
  "description": "CLI tool that analyzes local git repositories and creates a text file containing repository content optimized for sharing with LLMs.",
  "bin": {
    "repomaster": "bin/repomaster.js"
  },
  "main": "src/cli.js",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "start": "node bin/repomaster.js",
    "lint": "eslint \"./src/**/*.js\"",
    "prepublishOnly": "npm test && npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AubreyDDD/Repository-Context-Packager.git"
  },
  "keywords": [
    "cli",
    "git",
    "repository",
    "llm",
    "ai",
    "context",
    "tool",
    "developer-tools"
  ],
  "author": "Aubrey Du",
  "license": "MIT",
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "type": "module",
  "bugs": {
    "url": "https://github.com/AubreyDDD/Repository-Context-Packager/issues"
  },
  "homepage": "https://github.com/AubreyDDD/Repository-Context-Packager#readme",
  "dependencies": {
    "commander": "^14.0.0",
    "globby": "^15.0.0",
    "toml": "^3.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "3.6.2"
  }
}
